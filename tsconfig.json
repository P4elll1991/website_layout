{
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true,
    "noImplicitReturns": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "lib": ["es5", "es6", "dom", "es2017"],
    "target": "es6",
    "module": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "jquery",
      "webix",
      "yandex-maps",
      "cadesplugin",
      "leaflet"
    ],
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@modules/*": ["modules/*"],
      "@router/*": ["modules/router/*"]
    }
  },
  "include": ["**/*"],
  "files": ["node_modules/webix/webix.d.ts"]
}
